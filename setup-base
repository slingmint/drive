#!/bin/bash

apt-get update
apt-get install vim net-tools iputils-ping curl -y

#Set timezone to Central (or whatever)
rm /etc/localtime
ln -s /usr/share/zoneinfo/US/Central /etc/localtime

#Simplify Command Prompt
PS1="\w/ $ "

#VIM Configuration
sudo git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
sudo ln -s ~/git/drive/config-link/.vimrc ~/.vimrc


#GIT
sudo git config --global user.email "slingmint@gmail.com"


#i3

sudo apt-get install i3 -y

sudo git clone https://github.com/tobi-wan-kenobi/bumblebee-status ~/git/bumblebee-status

sudo apt-get install fonts-font-awesome -y

sudo apt-get install fonts-powerline -y



sudo mv ~/.config/i3/config ~/.config/i3/config-old
sudo ln ~/git/drive/i3/config ~/.config/i3/config

